{
    "name": "p2p-network",
    "version": "0.1.0",
    "main": "dist/src/index.js",
    "license": "MIT",
    "scripts": {
        "generate-version": "node -e 'process.stdout.write(`export const libraryVersion = \"${require(\"./package.json\").version}\";\n`)' > generated/version.ts",
        "prebuild": "yarn generate-version",
        "build": "tsc -p .",
        "pretest": "yarn generate-version",
        "test": "jest",
        "lint": "eslint --max-warnings 0 src/**/*.ts test/**/*.ts"
    },
    "eslintConfig": {
        "extends": "./eslint-defaults.json"
    },
    "jest": {
        "collectCoverage": true,
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "preset": "ts-jest",
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "coverageReporters": [
            "lcov",
            "json",
            "text"
        ],
        "testMatch": [
            "<rootDir>/test/**/test-*.ts"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.ts",
            "<rootDir>/src/**/*.tsx"
        ]
    },
    "dependencies": {
        "debug": "^4.1.1",
        "peerjs": "^1.2.0",
        "uuid": "^8.1.0"
    },
    "devDependencies": {
        "@types/debug": "^4.1.5",
        "@types/jest": "^25.2.3",
        "@types/peerjs": "^1.1.0",
        "@types/uuid": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^3.0.0",
        "@typescript-eslint/parser": "^3.0.0",
        "eslint": "^7.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "jest": "^26.0.1",
        "prettier": "^2.0.5",
        "ts-jest": "^26.0.0",
        "typescript": "^3.9.3"
    }
}
